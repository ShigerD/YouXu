<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bootomTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/main_tab_color_select</item>
    </style>

    <style name="more_popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popwin_more_menu_anim_in</item>
        <item name="android:windowExitAnimation">@anim/popwin_more_menu_anim_out</item>
    </style>

    <style name="add_popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popwin_add_menu_anim_in</item>
        <item name="android:windowExitAnimation">@anim/popwin_add_menu_anim_out</item>
    </style>
</resources>
